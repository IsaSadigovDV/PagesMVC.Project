@model IEnumerable<Blog>

@if(Model is null)
{
    <div>
        <h1>
           yoxdu yetka sen ol
        </h1>
    </div>
}
else
{
    @foreach (var item in Model)
    {

        <div class="article-card d-flex">
            <a asp-action="detail" asp-controller="blog" asp-route-id="@item.Id" >
                <img style="width:300px" src="~/assets/img/@item.Image" alt="girl reading book" />
            </a>
            <div class="article-text-container">
                <h4>
                    @item.Title
                </h4>
                <h5 class="gray">
                    @item.Description
                </h5>
                <div class="d-flex space-between align-center article-card-details">
                    <h6><a asp-action="detail" asp-controller="blog" asp-route-id="@item.Id" class="blue">Read More</a></h6>
                    <h6>@item.Author - @item.CreatedDate.Day.@item.CreatedDate.Month.@item.CreatedDate.Year</h6>
                </div>
            </div>
        </div>
    }
}

