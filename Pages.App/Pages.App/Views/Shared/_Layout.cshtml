@inject Pages.App.Services.Interfaces.IBasketService basketservice
@{
    List<Pages.App.ViewModels.BasketItemViewModel> basketItemViewModels = await basketservice.GetAllBaskets();
    decimal TotalPrice = 0;
    int count = 0;
}
<!DOCTYPE html>
<html lang="en">
