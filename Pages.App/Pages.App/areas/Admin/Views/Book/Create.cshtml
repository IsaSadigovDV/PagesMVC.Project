@model Book 

<div class="container">
	<form method="post" enctype="multipart/form-data">
	<div class="form-group">
		    <label asp-for="Name">Name:</label>
			<input type="text" class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text text-danger"></span>
	</div>
		<div class="form-group">
			<label asp-for="Price">Price:</label>
			<input type="text" class="form-control" asp-for="Price" />
			<span asp-validation-for="Price" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Description">Description:</label>
			<input type="text" class="form-control" asp-for="Description" />
			<span asp-validation-for="Description" class="text text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Publisher">Publisher:</label>
			<input type="text" class="form-control" asp-for="Publisher" />
			<span asp-validation-for="Publisher" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PaperCount">PaperCount:</label>
			<input type="text" class="form-control" asp-for="PaperCount" />
			<span asp-validation-for="PaperCount" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PubslishDate">PubslishDate:</label>
			<input type="datetime-local" class="form-control" asp-for="PubslishDate" />
			<span asp-validation-for="PubslishDate" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Dimensions">Dimensions:</label>
			 <input type="text" class="form-control" asp-for="Dimensions" />
			<span asp-validation-for="Dimensions" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.FormFile">File:</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile" />
			<span asp-validation-for="FormFile" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="language" class="col-sm-2 col-form-label">Languages:</label>
			<div class="col-sm-10">
				<select multiple name="language" class="form-control select2" asp-for="language" asp-items="ViewBag.Language">
					<option value="">---Choose---</option>
				</select>
				<span asp-validation-for="language" class="text text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="GenreId">Genre:</label>
			<select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genre">
				<option disabled selected>---Choose---</option>
			</select>
			<span asp-validation-for="GenreId" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CategoryId">Category:</label>
			<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category">
				<option disabled selected>---Choose---</option>
			</select>
			<span asp-validation-for="CategoryId" class="text text-danger"></span>
		</div>

			@Html.AntiForgeryToken()
	<button type="submit">Create</button>
	</form>
</div>
