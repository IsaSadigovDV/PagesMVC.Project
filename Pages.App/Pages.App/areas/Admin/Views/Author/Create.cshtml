@model Author 

<div class="container">
	<form method="post" enctype="multipart/form-data">
	<div class="form-group">
		    <label asp-for="Name" >Name:</label>
			<input type="text" class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text text-danger"></span>
	</div>
		<div class="form-group">
			<label asp-for="@Model.FormFile">File:</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile" />
			<span asp-validation-for="FormFile" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Description">Description:</label>
			<input type="text" class="form-control" asp-for="Description" />
			<span asp-validation-for="Description" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Email">Email:</label>
			<input type="email" class="form-control" asp-for="Email" />
			<span asp-validation-for="Email" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PhoneNumber">PhoneNumber:</label>
			<input type="text" class="form-control" asp-for="PhoneNumber" />
			<span asp-validation-for="PhoneNumber" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CountryId">Country:</label>
			<select multiple asp-for="CountryId" class="form-control" asp-items="ViewBag.Country">
				<option disabled selected>---Choose---</option>
			</select>
			<span asp-validation-for="CountryId" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="language" class="col-sm-2 col-form-label">Languages:</label>
			<div class="col-sm-10">
				<select multiple name="language" class="form-control select2" asp-for="language" asp-items="ViewBag.Language">
					<option value="">---Choose---</option>
				</select>
				<span asp-validation-for="language" class="text text-danger"></span>
			</div>
		</div>
		<div class="form-group ">
			<label asp-for="AuthoreGenres" class="col-sm-2 col-form-label">Genre</label>
			<div class="col-sm-10">
				<select multiple name="genre" asp-items="ViewBag.Genre" class="select2" selected-value="@Model?.genre.ToJsonArray()">
					<option disabled selected>---Choose---</option>
				</select>
				<span asp-validation-for="genre" class="text text-danger"></span>
			</div>
		</div>
		<div class="form-group ">
			<label asp-for="AuthorSocials" class="col-sm-2 col-form-label">Social</label>
			<div class="col-sm-10">
				<select multiple name="social" asp-items="ViewBag.Social" class="select2" selected-value="@Model?.social.ToJsonArray()">
					<option disabled selected>---Choose---</option>
				</select>
			</div>
		</div>
			@Html.AntiForgeryToken()
	<button type="submit">Create</button>
	</form>
</div>
