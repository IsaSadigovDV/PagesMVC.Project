@model Author 

<div class="container">
	<form method="post" enctype="multipart/form-data">
	<div class="form-group">
		    <label asp-for="Name" >Name:</label>
			<input type="text" class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text text-danger"></span>
	</div>
		<div class="form-group">
			<label asp-for="FormFile"></label>
			<input accept="image/*" type="file" class="form-control" asp-for="FormFile">
			<span class="text text-danger" asp-validation-for="FormFile"></span>
		</div>

		<div class="form-group row">
			<label asp-for="language" class="col-sm-2 col-form-label">Language</label>
			<div class="col-sm-10">
				<select multiple name="language" asp-items="ViewBag.Language" class="select2" selected-value="@Model?.language.ToJsonArray()">
					<option disabled selected>---Choose---</option>
				</select>
				 
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="AuthoreGenres" class="col-sm-2 col-form-label">Genre</label>
			<div class="col-sm-10">
				<select multiple name="genre" asp-items="ViewBag.Genre" class="select2" selected-value="@Model?.genre.ToJsonArray()">
					<option disabled selected>---Choose---</option>
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="AuthorSocials" class="col-sm-2 col-form-label">Social</label>
			<div class="col-sm-10">
				<select multiple name="social" asp-items="ViewBag.Social" class="select2" selected-value="@Model?.social.ToJsonArray()">
					<option disabled selected>---Choose---</option>
				</select>
			</div>
		</div>


			@Html.AntiForgeryToken()
	<button type="submit">Create</button>
	</form>
</div>
