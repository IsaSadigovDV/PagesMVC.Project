@model Blog
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input type="text" class="form-control" asp-for="Title">
            <span class="text text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input type="text" class="form-control" asp-for="Description">
            <span class="text text-danger" asp-validation-for="Description"></span>
        </div>
           <div class="form-group">
            <label asp-for="Author"></label>
            <input type="text" class="form-control" asp-for="Author">
            <span class="text text-danger" asp-validation-for="Author"></span>
        </div>
        <div class="form-group">
            <label asp-for="TagId">Tag:</label>
            <select asp-for="TagId" class="form-control" asp-items="ViewBag.Tags">
                <option disabled selected>---Choose---</option>
            </select>
            <span asp-validation-for="TagId" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.FormFile">File:</label>
            <input type="file" class="form-control" asp-for="@Model.FormFile" />
            <span asp-validation-for="FormFile" class="text text-danger"></span>
        </div>
        @Html.AntiForgeryToken()
        <button type="submit">Create</button>
    </form>
</div>